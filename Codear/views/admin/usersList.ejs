<!DOCTYPE html>
<html lang="en">

<%- include("partials/head.ejs")  %>

<body>
  <!-- HEADER -->
  <%- include("partials/header.ejs")  %>
  <!-- HEADER -->

  <!-- CONTENEDOR PRINCIPAL -->
  <div class="container-fluid row">
    <!-- CONTROLADOR -->
    <%- include("partials/controlador") %>
    <!-- CONTROLADOR -->


    <!-- CONTENEDOR -->
    <div class="contenedor-listaDeProductos container-fluid col-12 col-lg-9 col-md-8">
      <div class="titulo-listaDeProductos col-12 row">
        <h1 class="col-12 col-lg-5">TODOS LOS USUARIOS</h1>
      </div>

      <div class="plantilla-productos col-12">
        <div class="row">
          <h2 class="nombre-producto col-4 col-lg-4">Nombre</h2>
          <h2 class="categoria-producto col-lg-4">Correo Electronico</h2>
          <a class="star col-4 col-lg-4"><i class="fas fa-trash-alt"></i></a>
        </div>
      </div>

      <div class="usuarios-list row col-12">
        <% usuarios.forEach(user => { %>
        <a class="col-12"  href="/admin/curso/edit/<%= user.id %>">
          <div class="usuario-list row container">
            <h2 class="nombre-usuario col-4 col-lg-4"><%= user.nombreUsuario %> </h2>
            <h2 class="precio-usuario col-4 col-lg-4"><%= user.nombreUsuario %> </h2>
            <form class="col-4 col-lg-4" action="/admin/user/delete/<%=user.id%>?_method=DELETE" method="POST">
              <button class="star-product" type="submit"><i class=" fas fa-trash-alt borrar-producto"></i></button>
            </form>
            
          </div>
        </a>
        <% }) %>
      </div>
    </div>
    <!-- CONTENEDOR -->
  </div>
  <!-- CONTENEDOR PRINCIPAL -->








  <!-- /footer -->
  <%- include("partials/footer.ejs")  %>
</body>

</html>